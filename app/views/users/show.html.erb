<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
			<%= @user.member_status %>
		</section>
		<section>
      		<%= render 'shared/stats' %>
    	</section>
	</aside>
	<div class="span8">
		<%= render 'follow_form' if signed_in? %>
		<% if @events.any? %>
		<h3>Events signed up (<%= @events.count %>)</h3>
	      <ul class="users">
	        <% @events.each do |event| %>
	            <li><%= link_to event.name, event %>
	            <%= link_to event.name, event %>
    			(Date: <%= event.date %>,
    			Location: <%= event.location %>)</li>
	        <% end %>
	      </ul>
	    <% end %>
		<% if @user.microposts.any? %>
		<h3>Microposts (<%= @user.microposts.count %>)</h3>
		<ol class="microposts">
			<%= render @microposts %>
		</ol>
		<%= will_paginate @microposts %>
		<% end %>
	</div>
</div>