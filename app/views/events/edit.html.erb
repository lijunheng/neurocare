<% provide(:title, "Edit event") %>
<h1>Edit event: <%= @event.name %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@event) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :content, 'Details' %>
      <%= f.text_area :content, :id => 'content_field' %>
      <%= f.label :date %>
      <%= f.text_field :date %>
      <%= f.label :location %>
      <%= f.text_field :location %>
      <%= f.submit "Save changes", class: "btn btn-large btn-inverse" %>
    <% end %>
  </div>
</div>